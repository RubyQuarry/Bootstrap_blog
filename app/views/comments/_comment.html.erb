<%= div_for(comment) do %>

  <div class="qa-message-list" id="wallmessages">
    <div class="message-item" id="m16">
      <div class="message-inner">
        <div class="message-head clearfix">
          <div class="avatar pull-left"><a href="./index.php?qa=user&qa_1=Oleg+Kolesnichenko"><img id="profile_image" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png"></a></div>
          <div class="user-detail">
            <h5 class="handle"><%= comment.name %></h5>
            <div class="post-meta">
              <div class="asker-meta">
                <span class="qa-message-what"></span>
