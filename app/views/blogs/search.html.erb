
<% @blogs.each do |blog| %>
  <div class="blog-post">
    <img class="summary-image img-suqare img-responsive <%= cycle("pull-right", "pull-left") %>" alt="Bootstrap template" src="http://placehold.it/200x200"/>
    <h2 class="blog-post-title"><%= blog.title %></h2>
    <p class="blog-post-meta"><%= date_format(blog) %></a></p>
